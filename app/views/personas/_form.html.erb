<%= render 'shared/errors', obj: @persona %>
<div class='row'>
  <div class='col-xs-10'>
    <%= form_for @persona do |f| %>
        <div class="form-group">

          <div class="input-group center" align="center">
            <span class="input-group-addon">Prenom</span>
            <%= f.text_field :nombre, class: "form-control", placeholder: "Prenom", autofocus: true %>
          </div>

        </div>
        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Nom</span>
            <%= f.text_field :apelllido, class: "form-control", placeholder: "Nom", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group controls">
            <span class="input-group-addon">Date de Naissance</span>
            <%= f.text_field :fechaNacimiento, :class => 'form-control', placeholder: 'DD-MM-YYYY', :id => 'datetimepicker1' %>

            <script type="text/javascript">
              $('#datetimepicker1').datetimepicker({
                format: 'DD-MM-YYYY'
              });</script>
          </div>
        </div>

        <div class="form-group ">
          <div class="input-group">
            <span class="input-group-addon">Tipe de _document</span>

              
            <%= f.select(:dt_id, options_from_collection_for_select(Doc_type.all, :id, :doctype_description), {include_blank: "Choisir un Document type"}, class: "form-control", id: "placeholder-example" ) %>


          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Doc. d'identité</span>
            <%= f.text_field :numeroDocumento, class: "form-control", placeholder: "Doc. d'identité", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Email</span>
            <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Télephone portable</span>
            <%= f.text_field :teleCelular, class: "form-control", placeholder: "Télephone portable", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Télephone Bureau</span>
            <%= f.text_field :teleOficina, class: "form-control", placeholder: "Télephone Bureau", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Télephone Domicile</span>
            <%= f.text_field :teleParticular, class: "form-control", placeholder: "Télephone Domicile", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Profesion</span>
            <%= f.text_field :profesion, class: "form-control", placeholder: "profesion", autofocus: true %>
          </div>
        </div>

        <div class="form-group center">
          <div class="input-group">
            <span class="input-group-addon">Entreprise</span>
            <%= f.text_field :entreprise, class: "form-control", placeholder: "Entreprise", autofocus: true %>
          </div>
        </div>

        <div class="form-group ">
          <div class="input-group">
            <span class="input-group-addon">Nacionalite</span>

              <%=  %>
            <%= f.select(:nacionalidad_id, options_from_collection_for_select(Nacionalidad.all, :id, :description), {include_blank: "Choisir une nacionlite"}, class: "form-control", id: "placeholder-example" ) %>


          </div>



        </div>


        <div class="action-persone center">
          <%= f.submit "Enregistré le parent", class: "btn btn-m btn-success" %>
          <%= link_to "Retour sur la liste de persone", personas_path, class: "btn btn-m btn-primary" %>
        </div>


    <% end %>

  </div>
  </dvi>
  </dvi>
  <% content_for :js do %>
      <script type="text/javascript">
        $(document).ready(function() {
          prettyPrint();
          $('select#placeholder-example').select2({
            placeholder: "Choisir une nacionlite",
            allowClear: true
          });


        });
      </script>
  <% end %>
</div>


